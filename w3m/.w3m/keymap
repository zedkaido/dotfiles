# ------
# CONFIG
# ------
keymap gb TAB_GOTO file://~/.w3m/blank.html 
keymap gK TAB_GOTO file://~/.w3m/keymap # view keymaps

# --------------
# SEARCH ENGINES
# --------------
keymap sg COMMAND "SET_OPTION dictcommand=file:///cgi-bin/google.cgi ; DICT_WORD"
keymap sd COMMAND "SET_OPTION dictcommand=file:///cgi-bin/ddg.cgi ; DICT_WORD"
keymap sp COMMAND "SET_OPTION dictcommand=file:///cgi-bin/tpb.cgi ; DICT_WORD"
keymap sy COMMAND "SET_OPTION dictcommand=file:///cgi-bin/yewtube.cgi ; DICT_WORD"
keymap sw COMMAND "SET_OPTION dictcommand=file:///cgi-bin/wikipedia.cgi ; DICT_WORD"

# --------              
# COMMANDS
# --------              
keymap :: COMMAND       
keymap :H HELP          
keymap :O OPTIONS       
keymap :d DOWNLOAD_LIST 

# ------------
# PAGE RELATED
# ------------
keymap r RELOAD
keymap C-r RELOAD

keymap o GOTO
keymap O EXTERN
keymap gx EXTERN_LINK
keymap yy EXTERN 'printf %s | pbcopy'

keymap :w SAVE
keymap :W PRINT
keymap :e LOAD
keymap :f PEEK_LINK
keymap :b SELECT_MENU

keymap c PEEK
keymap gC-g INFO
keymap C-g LINE_INFO
keymap gf VIEW

# ---------------------
# READER MODE (rdrview)
# ---------------------
keymap R COMMAND "READ_SHELL 'rdrview $W3M_URL -H 2> /dev/null 1> /tmp/readable.html'Â ; LOAD /tmp/readable.html"

# ----------
# NAVIGATION
# ----------
keymap f MOVE_LIST_MENU
keymap F LIST_MENU
keymap C-n NEXT_LINK
keymap C-p PREV_LINK
keymap TAB NEXT_LINK
keymap S-TAB PREV_LINK

# ------------------
# HISTORY NAVIGATION
# ------------------
keymap L NEXT
keymap H PREV
keymap :h HISTORY

# ----
# JUMP
# ----
keymap ESC-C-j SUBMIT #?
keymap C-] TAB_LINK
keymap C-j GOTO_LINK

# ---------
# SCROLLING
# ---------
# keymap C-e UP
keymap C-e EDIT_SCREEN
keymap C-y DOWN
keymap gg BEGIN
keymap GG END
keymap C-d NEXT_PAGE
keymap C-u PREV_PAGE
keymap zz CENTER_V 

# ------------------
# CURSOR MOTION
# ------------------
keymap l MOVE_RIGHT
keymap h MOVE_LEFT
keymap j MOVE_DOWN1
keymap k MOVE_UP1
keymap RIGHT MOVE_RIGHT
keymap LEFT MOVE_LEFT
keymap DOWN MOVE_DOWN1

keymap UP MOVE_UP1
keymap 0 LINE_BEGIN
keymap $ LINE_END
keymap w NEXT_WORD
keymap b PREV_WORD

keymap < SHIFT_LEFT
keymap > SHIFT_RIGHT

# --------------
# CURSOR HISTORY
# --------------
keymap C-i REDO
keymap C-o UNDO

# ---------
# BOOKMARKS
# ---------
keymap m ADD_BOOKMARK
keymap :m VIEW_BOOKMARK

# ---
# TAB
# ---
keymap t TAB_GOTO
keymap T TAB_MENU

keymap C-t NEW_TAB
keymap gt NEXT_TAB
keymap gT PREV_TAB
keymap J NEXT_TAB
keymap K PREV_TAB
keymap C-wL TAB_RIGHT
keymap C-wH TAB_LEFT

keymap d COMMAND "EXTERN 'echo %s >> ~/.w3m/.restore_tab.txt' ; CLOSE_TAB"
keymap u COMMAND TAB_GOTO file://cgi-bin/restore_tab.cgi

# ----
# EXIT         
# ----         
keymap ZZ EXIT 
keymap ZQ QUIT 
keymap :q QUIT 
